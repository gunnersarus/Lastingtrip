<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <meta name="csrf-token" content="{{csrfToken}}" />
    <link rel="stylesheet" href="/css/sign_in.css" />
    <!-- icon  -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />

    <!-- Bt  -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
  </head>

  <body>
    <div class="container-login">
      <div class="wrapper">
        <form action="/api/v1/users/login" method="POST">
          <!-- Ensure method and action are set -->
          <h1>Login</h1>
          <input type="hidden" name="_csrf" value="{{csrfToken}}" />
          <div class="input-box">
            <input
              id="email"
              name="email"
              type="text"
              placeholder="Email"
              required
            />
            <!-- Add name attribute -->
            <i class="bx bxs-user"></i>
            <!-- Vị trí hiển thị lỗi cho email -->
            <span id="email-error" class="error-message"></span>
          </div>
          <div class="input-box">
            <input
              id="password"
              name="password"
              type="password"
              placeholder="Password"
              required
            />
            <!-- Add name attribute -->
            <i class="bx bxs-lock-alt"></i>
            <!-- Vị trí hiển thị lỗi cho mật khẩu -->
            <span id="password-error" class="error-message"></span>
          </div>
          <div class="modal-body" id="errorMessageModal">
            <!-- Error message will be inserted here -->
          </div>
          <div class="remember-forgot">
            <a></a>
            <a href="/ForgotPass">Forgot Password</a>
          </div>
          <div class="recaptcha-container">
            <div
              class="g-recaptcha"
              data-sitekey="6Lfv34wqAAAAAJ3YMjekI0NPatFxdg6R2NDZNyXD"
            ></div>
          </div>
          <button type="submit" class="btn">Login</button>
          <div class="register-link">
            <p>Don't have an account? <a href="/register">Register</a></p>
          </div>
          <button class="google-login-btn">
            <img
              id="hh"
              src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg"
              alt="Google logo"
            />
            <a
              id="xl"
              href="https://nhom10.movie-app-motphim.com/api/v1/users/auth/google"
            >Login with Google</a>

          </button>
        </form>
      </div>
    </div>
    <!-- OTP Modal -->
     <div id="otpModal" class="modal">
        <div class="modal-content">
            <span class="close-btn">&times;</span>
            <h2>Verify OTP</h2>
            <form id="otpForm">
                <input id="otpInput" type="text" placeholder="Enter 6-digit OTP" maxlength="6" required />
                <button type="submit" class="btn">Verify</button>
                <p id="otpError"></p>
                <a href="#" id="resendOTP">Resend OTP</a>
            </form>
        </div>
    </div>

    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
      integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <!-- js -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/login.js"></script>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
  </body>

</html>
